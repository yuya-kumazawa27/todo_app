<h1 class="h4">タスク編集画面</h1>
<%= form_tag(task_update_path,method: :post) do%>
  <div class="form-group">
  <%= text_area_tag :task, @task.task, class: 'form-control' %>
  </div>
  <div class="actions pb-5">
    <%= submit_tag '編集', class:'btn btn-primary' %>
  　<%= link_to '一覧画面', tasks_index_path(@task), class: 'btn btn-primary'%>
  </div>
<% end %> 
